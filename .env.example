# =============================================================================
# VOLKOVCHAIN DEVELOPMENT ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env.local and configure the values for your development environment
# See DEVELOPMENT.md for detailed setup instructions

# =============================================================================
# CORE APPLICATION SETTINGS
# =============================================================================

# Base URL for the application (required for development)
NEXT_PUBLIC_BASE_URL=http://localhost:3000

# Application environment
NODE_ENV=development

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# MongoDB connection string
# For Docker development: mongodb://mongodb:27017/volkovchain
# For local MongoDB: mongodb://localhost:27017/volkovchain
MONGODB_URI=mongodb://localhost:27017/volkovchain

# Database name
MONGODB_DB_NAME=volkovchain

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================

# YouTube API Configuration
# Get your API key from: https://console.developers.google.com/apis/credentials
# Required for video gallery functionality
YOUTUBE_API_KEY=
YOUTUBE_CHANNEL_ID=

# =============================================================================
# ANALYTICS & MONITORING
# =============================================================================

# Google Analytics 4
# Get your ID from: https://analytics.google.com/
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# Vercel Analytics (if using Vercel)
NEXT_PUBLIC_VERCEL_ANALYTICS_ID=

# Web Vitals and Performance Monitoring
ANALYTICS_WEBHOOK_URL=
ERROR_TRACKING_WEBHOOK_URL=

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================

# SMTP Configuration for contact forms and notifications
SMTP_HOST=
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=

# Email addresses
CONTACT_EMAIL=contact@volkovchain.com
NOTIFICATION_EMAIL=notifications@volkovchain.com

# =============================================================================
# SECURITY & AUTHENTICATION
# =============================================================================

# NextAuth.js configuration (if implementing authentication)
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-secret-key-here

# API Security
API_SECRET_KEY=your-api-secret-key
JWT_SECRET=your-jwt-secret

# =============================================================================
# PAYMENT PROCESSING
# =============================================================================

# Stripe Configuration (for consultation booking)
# Get keys from: https://dashboard.stripe.com/apikeys
STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# =============================================================================
# CACHING & PERFORMANCE
# =============================================================================

# Redis Configuration (for caching)
# For Docker development: redis://redis:6379
# For local Redis: redis://localhost:6379
REDIS_URL=redis://localhost:6379

# Cache settings
CACHE_TTL=3600
REVALIDATE_TIME=60

# =============================================================================
# DEVELOPMENT TOOLS
# =============================================================================

# Bundle Analyzer
ANALYZE=false

# Debugging
DEBUG=false
VERBOSE_LOGGING=false

# Performance monitoring in development
PERF_MONITORING=true

# =============================================================================
# 3D VISUALIZATION SETTINGS
# =============================================================================

# Three.js Performance Settings
NEXT_PUBLIC_MAX_PIXEL_RATIO=2
NEXT_PUBLIC_ENABLE_SHADOWS=true
NEXT_PUBLIC_ENABLE_ANTIALIASING=true

# =============================================================================
# CONTENT MANAGEMENT
# =============================================================================

# Blog and content settings
CONTENT_DIR=./content
BLOG_POSTS_PER_PAGE=10

# Image optimization
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# =============================================================================
# TESTING CONFIGURATION
# =============================================================================

# Test database (separate from development)
TEST_MONGODB_URI=mongodb://localhost:27017/volkovchain-test

# E2E Testing
E2E_BASE_URL=http://localhost:3000
PLAYWRIGHT_HEADLESS=true

# =============================================================================
# DOCKER DEVELOPMENT
# =============================================================================

# Docker-specific overrides (used in docker-compose)
DOCKER_APP_PORT=3000
DOCKER_MONGODB_PORT=27017
DOCKER_REDIS_PORT=6379
DOCKER_MONGO_EXPRESS_PORT=8081

# =============================================================================
# ADVANCED CONFIGURATION
# =============================================================================

# Feature flags
NEXT_PUBLIC_ENABLE_BLOG=true
NEXT_PUBLIC_ENABLE_CONSULTING=true
NEXT_PUBLIC_ENABLE_VIDEOS=true
NEXT_PUBLIC_ENABLE_3D_TABLE=true

# Internationalization
NEXT_PUBLIC_DEFAULT_LANGUAGE=en
NEXT_PUBLIC_SUPPORTED_LANGUAGES=en,ru

# API Rate Limiting
API_RATE_LIMIT_REQUESTS=100
API_RATE_LIMIT_WINDOW=3600

# =============================================================================
# DEPLOYMENT SPECIFIC
# =============================================================================

# Production overrides (not used in development)
# NEXT_PUBLIC_BASE_URL=https://volkovchain.com
# MONGODB_URI=mongodb+srv://...
# REDIS_URL=redis://production-redis:6379