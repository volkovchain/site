{
  "name": "volkovchain-site",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "analyze": "ANALYZE=true next build",
    "build:analyze": "npm run build && npx @next/bundle-analyzer .next",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "docker:dev": "docker-compose up --build",
    "docker:dev:detached": "docker-compose up -d --build",
    "docker:dev:nginx": "docker-compose --profile nginx up --build",
    "docker:stop": "docker-compose down",
    "docker:clean": "docker-compose down -v --remove-orphans",
    "docker:logs": "docker-compose logs -f",
    "docker:shell:app": "docker-compose exec app sh",
    "docker:shell:db": "docker-compose exec mongodb mongosh"
  },
  "dependencies": {
    "@headlessui/react": "^2.2.8",
    "@heroicons/react": "^2.2.0",
    "@mdx-js/loader": "^3.0.0",
    "@mdx-js/react": "^3.0.0",
    "@next/mdx": "^15.0.0",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@react-three/drei": "^10.7.6",
    "@react-three/fiber": "^9.3.0",
    "@tailwindcss/postcss": "^4.1.13",
    "@testing-library/dom": "^10.4.1",
    "autoprefixer": "^10.4.21",
    "clsx": "^2.1.1",
    "framer-motion": "^12.23.12",
    "gray-matter": "^4.0.3",
    "leva": "^0.10.0",
    "mongodb": "^6.3.0",
    "mongoose": "^8.0.0",
    "next": "^15.0.0",
    "next-mdx-remote": "^5.0.0",
    "perf_hooks": "0.0.1",
    "postcss": "^8.5.6",
    "prism-react-renderer": "^2.3.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "reading-time": "^1.5.0",
    "rehype-highlight": "^5.0.2",
    "rehype-slug": "^5.1.0",
    "remark-gfm": "^3.0.1",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.13",
    "three": "^0.180.0",
    "web-vitals": "^3.5.0",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@next/bundle-analyzer": "^15.0.0",
    "@playwright/test": "^1.40.0",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^16.1.0",
    "@testing-library/user-event": "^14.5.1",
    "@types/node": "^20.14.10",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@vitejs/plugin-react": "^4.2.0",
    "eslint": "^8.57.0",
    "eslint-config-next": "^15.0.0",
    "jsdom": "^23.0.1",
    "typescript": "^5.6.0",
    "vitest": "^1.0.4",
    "webpack-bundle-analyzer": "^4.10.1"
  }
}
