# Docker Development Environment Variables
# Copy this file to .env.local and update with your actual values

# Database
MONGODB_URI=mongodb://admin:adminpassword@mongodb:27017/volkovchain?authSource=admin

# Application
NEXT_PUBLIC_SITE_URL=http://localhost:3000
NODE_ENV=development

# YouTube API (optional - add your keys)
YOUTUBE_API_KEY=your_youtube_api_key_here
YOUTUBE_CHANNEL_ID=your_youtube_channel_id_here

# Stripe (optional - add your keys)
STRIPE_SECRET_KEY=your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key_here

# Redis (optional)
REDIS_URL=redis://redis:6379

# Analytics (optional)
GOOGLE_ANALYTICS_ID=your_google_analytics_id_here